<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Posts</title>
  </head>
  <body>
    <h1>Users</h1>
    <ul>
      <% users.forEach(user => { %>
      <li>
        <img
          src="<%= user.userPic %>"
          alt="Profile Picture of <%= user.userName %>"
        />
        <strong><%= user.userName %></strong>
      </li>
      <% }) %>
    </ul>

    <h1>Posts</h1>
    <% posts.forEach(post => { %>
    <div>
      <h2><%= post.header %></h2>
      <p><%= post.content %></p>
      <p>
        <small>Posted by: <%= post.postedBy %> on <%= post.postDate %></small>
      </p>
      <% if (post.postImg) { %>
      <img src="<%= post.postImg %>" alt="Post Image" />
      <% } %>
      <div>
        <h3>Comments</h3>
        <ul>
          <% post.commentsOnPost.forEach(comment => { %>
          <li>
            <strong><%= comment.postedBy %>:</strong> <%= comment.comment %>
            (Likes: <%= comment.likes %>)
          </li>
          <% }) %>
        </ul>
      </div>
      <p>Likes: <%= post.likes %> | Shared: <%= post.shared %></p>
    </div>
    <% }) %>
  </body>
</html>
